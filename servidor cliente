package extraclase_1.src;

import java.util.List;
import java.io.DataInputStream;
import java.io.DataOutputStream;
import java.net.ServerSocket;
import java.net.Socket;
import java.util.logging.Logger;
import java.util.Scanner;
import java.util.Observable;
/**
 * Esta clase esta encargada de recibir los mensajes, solo envía el monto final
 * 
 * @author Eduardo Cruz
 */

public class Servidor extends Observable implements Runnable{
    private int PUERTO;
    /**
     * 
     * @param PUERTO puesrto por el cual se envían los mensajes
     */
    public Servidor(int PUERTO){
        this.PUERTO=PUERTO;
    }

    @Override
    public void run() {
        ServerSocket servidor = null;
        Socket socketcliente= null;
        DataInputStream in;
        DataOutputStream out;
        String monto;


        try {
            servidor = new ServerSocket(PUERTO);
            while(true){
                socketcliente = servidor.accept();
                in = new DataInputStream(socketcliente.getInputStream());
                out= new DataOutputStream(socketcliente.getOutputStream());
                String mensaje = in.readUTF();
                /**
                 * analizo el mensaje por partes, cada parte del calculo se debe enviar de una manera concreta
                 */
                String[] datos=mensaje.split(":");
                if (datos[1].equals("calculo")){
                    int valor = Integer.parseInt(datos[2]);
                    int porcentaje = Integer.parseInt(datos[3]);
                    int peso = Integer.parseInt(datos[4]);
                    double montoR=(valor * porcentaje/100 +peso*0.15);
                    /**
                     * corvierto el monto a un string y lo envío
                     * analizo con el 1 y 2 dos cual persona lo envió
                     */
                    monto = String.valueOf(montoR);

                    if (datos[0].equals("1")){

                        this.setChanged();
                        this.notifyObservers("1:"+monto);
                        this.clearChanged();
                        out.writeUTF("2:"+monto);}
                    else{
                        this.setChanged();
                        this.notifyObservers("2:"+monto+"\n");
                        this.clearChanged();
                        out.writeUTF("1:"+monto+"\n");
                    }
                }

                this.setChanged();
                this.notifyObservers(mensaje);
                this.clearChanged();
                socketcliente.close();
                }
                
                    
                }catch(Exception e){};

      
        
    }}
        




