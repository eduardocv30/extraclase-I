package extraclase_1.src;

import java.util.Observable;
import java.util.Observer;
import javax.swing.JScrollPane;

/**
 * posee el mismo funcionamiento que le frame 1, se invierten los puertos 
 * y se agrega un 2 en el momento de mostar el mensaje
 */

public class frame2 extends javax.swing.JFrame implements Observer {

    public frame2(){
        initComponents();
        this.getRootPane().setDefaultButton(this.botonEnviar);
        Servidor server = new Servidor(9000);
        server.addObserver(this);
        Thread thread = new Thread(server);
        thread.start();
    }
    
    @SuppressWarnings("unchecked")
    private void initComponents(){
        JScrollPane1 =new javax.swing.JScrollPane();
