        private void botonEnviarActionPerformed(java.awt.event.ActionEvent evt){
            String mensaje = "2:" + this.TextoEnviar.getText() + "\n";
            this.Texto.append(mensaje);
            Cliente c = new Cliente(3000,mensaje);
            Thread t= new Thread(c);
            c.addObserver(this);
            t.start();
        }


        public static void main(String args[]){
            try{for (javax.swing.UIManager.LookAndFeelInfo info : javax.swing.UIManager.getInstalledLookAndFeels()){
                if ("Nimbus".equals(info.getName())){
